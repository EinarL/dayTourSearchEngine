      <Button layoutX="332.0" layoutY="147.0" mnemonicParsing="false" onAction="#incrementCount" prefHeight="35.0" prefWidth="26.0" text="&gt;" />
      <Label layoutX="36.0" layoutY="209.0" prefHeight="36.0" prefWidth="176.0" text="Payment option:">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <ComboBox fx:id="paymentCombo" layoutX="212.0" layoutY="215.0" prefWidth="150.0" style="-fx-font-size: 12;" />
   </children>
