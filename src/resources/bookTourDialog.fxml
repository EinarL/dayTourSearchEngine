         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <TextField fx:id="amount" alignment="CENTER" editable="false" layoutX="268.0" layoutY="145.0" prefHeight="39.0" prefWidth="62.0" promptText="0" text="1">
