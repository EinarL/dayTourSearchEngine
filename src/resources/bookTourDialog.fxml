<AnchorPane prefHeight="360.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vidmot.BookTourDialog">
   <children>
      <Label fx:id="tourName" alignment="CENTER" contentDisplay="CENTER" layoutX="-2.0" prefHeight="70.0" prefWidth="606.0" text="Titill á dagsferð" textAlignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Button fx:id="confirmButton" defaultButton="true" layoutX="340.0" layoutY="289.0" mnemonicParsing="false" onAction="#confirmBooking" prefHeight="60.0" prefWidth="225.0" text="Confirm Booking">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" layoutX="36.0" layoutY="289.0" mnemonicParsing="false" onAction="#close" prefHeight="60.0" prefWidth="225.0" text="Cancel">
